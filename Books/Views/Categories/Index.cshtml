@model IEnumerable<Books.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary">Categories</h1>
<hr />

<p>
    <a class =" btn btn-primary" asp-action="Create"><i class="icofont-plus"></i> Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"class="btn btn-primary "><i class="icofont-ui-edit"></i> Edit</a> 
                
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger"><i class="icofont-ui-close"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
